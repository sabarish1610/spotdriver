<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5sp"
    app:cardCornerRadius="2dp"
    android:layout_margin="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/get_catagory_models"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="8sp"
            android:text="Catagory-Innova"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            style="@style/line"
            />


        <TextView
            android:id="@+id/car_list_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="Mr. Sabarish S"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/car_luxury_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Ac"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_car_register_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="TN70A9555"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_fuel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Petrol"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_locality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="BTM Layout,Bangalore"
            android:textSize="16sp" />
        <View
            style="@style/line"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/car_front_view"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/car_back_view"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id ="@+id/car_inner_view"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/side_view_1"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/side_view_2"
                android:layout_marginLeft="10sp" />
        </LinearLayout>
       <!-- <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/list_car_list"></android.support.v7.widget.RecyclerView>-->
        <View
            style="@style/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp">

            <TextView
                android:id="@+id/car_driver_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="23 yrs Exp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_marginLeft="5sp"
                android:text="•" />

            <TextView
                android:id="@+id/car_driver_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age 55"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_marginLeft="5sp"
                android:text="•" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model 2005"
                android:id="@+id/car_modwl"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_marginLeft="5sp"
                android:text="•" />

            <TextView
                android:id="@+id/carSeatingCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seating 2"
                android:textColor="@android:color/black"

                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>