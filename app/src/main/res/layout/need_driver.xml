<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_shadow">
    <EditText
        android:id="@+id/need_driver_phone"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter Your Mobile Number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/phone"
        android:background="@drawable/background_edittext"/>

    <EditText
        android:id="@+id/need_driver_password_login"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Please Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_phone"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_password"
        android:background="@drawable/background_edittext"
        app:layout_constraintHorizontal_bias="0.506" />

    <Switch
        android:id="@+id/need_driver_rember_swith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="@+id/need_driver_password_login"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_password_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:textColor="@color/black"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/need_driver_rember_swith"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/need_driver_rember_swith"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_rember_swith" />

    <Button
        android:id="@+id/need_driver_login"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:text="Sign in"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_password_login"
        android:background="@color/yellow"/>

    <TextView
        android:id="@+id/need_driver_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User(Sign Up)"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/need_driver_login"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_login" />

    <TextView
        android:id="@+id/need_driver_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password?"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/need_driver_login"
        app:layout_constraintTop_toTopOf="@+id/need_driver_new_user"
        android:layout_marginTop="0dp" />

    <ProgressBar
        android:id="@+id/user_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/need_driver_login"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/need_driver_password_login" />

</android.support.constraint.ConstraintLayout>