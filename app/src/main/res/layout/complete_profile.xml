<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp"
    android:background="@drawable/side_nav_bar"
    tools:context="com.example.suriya.spotdrivers.activity.driver.CreateDriverProfileAcitivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/licience_details"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/licene_number"
            style="@style/driver_edit_style"
            android:layout_marginTop="10sp"
            android:hint="Licence No"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:layout_marginRight="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edit_text_round_bg"
            android:orientation="vertical">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:id="@+id/licence_type_spinner"
                android:padding="10sp"></Spinner>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_licence_error"
        android:layout_below="@+id/licience_details"
        android:text=""
        android:textColor="@android:color/holo_red_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_licence_error"
        android:id="@+id/price_details"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driver_exp"
            android:hint="Exp"
            android:inputType="number"
            android:maxLength="2"
            android:layout_weight="1"
            style="@style/driver_edit_style"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="6"
            android:id="@+id/driver_cost"
            android:layout_marginRight="5sp"
            style="@style/driver_edit_style"
            android:hint="Cost"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_round_bg">

            <Spinner
                android:id="@+id/cost_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="2sp"
                android:layout_marginStart="5sp"></Spinner>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cost_exp"
        android:layout_below="@+id/price_details"
        android:text=""
        android:textColor="@android:color/holo_red_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/licence_image"
        android:orientation="horizontal"
        android:layout_below="@+id/cost_exp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licence Front Pic"
            android:gravity="center"
            android:background="@drawable/edit_text_round_bg"
            android:padding="5sp"
            android:id="@+id/driving_licence_front_pic"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:drawableRight="@drawable/ic_attach_black"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_round_bg"
            android:gravity="center"
            android:text="Licence Back pic"
            android:id="@+id/driving_licence_back_pic"
            android:padding="5sp"
            android:layout_marginLeft="5sp"
            android:drawableRight="@drawable/ic_attach_black"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/licence_image"
        android:layout_marginTop="10sp"
        android:maxLength="14"
        style="@style/driver_edit_style"
        android:id="@+id/aadhar_number"
        android:hint="Aadhar/ID Number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aadhar_number"
        android:id="@+id/proof_pic"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Proof front Pic"
            android:gravity="center"
            android:background="@drawable/edit_text_round_bg"
            android:padding="5sp"
            android:id="@+id/driver_id_front_pic"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5sp"
            android:drawableRight="@drawable/ic_attach_black"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_round_bg"
            android:gravity="center"
            android:id="@+id/driver_id_back_pic"
            android:text="ID Proof Back Pic"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:layout_marginLeft="5sp"
            android:drawableRight="@drawable/ic_attach_black"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/duty_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/proof_pic"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        >

        <RadioButton
            android:id="@+id/permanent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Permanent"
            android:textColor="@drawable/text" />

        <RadioButton
            android:id="@+id/acting_duty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Acting Duty"
            android:textColor="@drawable/text" />
        <RadioButton
            android:id="@+id/both"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Both"
            android:textColor="@drawable/text" />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/driver_signUp"
        android:layout_below="@+id/duty_type"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yellow_button_bg"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/sig"
        android:layout_below="@+id/driver_signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sig"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/terms_and_conditions"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

