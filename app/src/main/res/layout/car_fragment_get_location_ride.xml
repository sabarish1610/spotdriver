<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/getlocation_car_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
<TextView
    android:layout_marginTop="2sp"
    android:id="@+id/title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Would you like to travel with"
    android:textStyle="italic"
    android:textColor="@android:color/holo_blue_dark"
    android:textSize="20sp"/>
    <com.example.suriya.spotdrivers.support.MyViewPager
        android:id="@+id/viewPagerVerticalFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/getlocation_car_toolbar"
        android:layout_marginBottom="30sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vechile_type"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25sp"
                android:layout_margin="10sp"
                android:id="@+id/vechile_type_radio_type">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:padding="24sp"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/taxi"
                    android:gravity="center"
                    android:text="CAR"
                    android:textColor="@drawable/text"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:background="@android:color/darker_gray"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="24sp"
                    android:button="@null"
                    android:drawableTop="@drawable/van"
                    android:gravity="center"
                    android:text="VAN"
                    android:textColor="@drawable/text"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:background="@android:color/darker_gray"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="24sp"
                    android:drawableTop="@drawable/travel_bus"
                    android:button="@null"
                    android:gravity="center"
                    android:text="BUS"
                    android:textColor="@drawable/text"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carseatingCapatiy"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10sp"
                android:id="@+id/car_select_seating">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="4"
                    android:textColor="@drawable/text"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="6"
                    android:textColor="@drawable/text"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="8+"
                    android:textColor="@drawable/text"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vanseatingCapatiy"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10sp"
                android:id="@+id/van_select_seating">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="12"
                    android:textColor="@drawable/text"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="15"
                    android:textColor="@drawable/text"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="18"
                    android:textColor="@drawable/text"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="21"
                    android:textColor="@drawable/text"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="25"
                    android:textColor="@drawable/text"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/busseatingCapatiy"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp"
            android:id="@+id/bus_select_seating">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="30"
            android:textColor="@drawable/text"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="35"
            android:textColor="@drawable/text"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:background="@drawable/radio"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="50"
            android:textColor="@drawable/text"/>
</RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/getLocation">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/car_card_view"
                android:layout_marginStart="8sp"
                android:elevation="5sp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginEnd="8sp"
                android:layout_marginRight="8sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_from">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Where you are Start Ride?"
                            android:id="@+id/from"
                            style="@style/text"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cityImage"
                            android:layout_below="@+id/from"
                            android:src="@drawable/ic_location_image"/>
                        <TextView
                            android:id="@+id/enter_pick_up_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Location"
                            android:layout_below="@+id/from"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:layout_toRightOf="@+id/cityImage"
                            android:layout_toEndOf="@+id/cityImage" />
                        <TextView
                            android:id="@+id/pick_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/enter_pick_up_location"
                            android:layout_toEndOf="@+id/cityImage"
                            android:layout_toRightOf="@+id/cityImage"
                            android:text="Your pickup location" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="8sp"
                        android:id="@+id/line_space"
                        android:layout_below="@+id/layout_from"
                        android:layout_height="1sp"
                        android:layout_marginStart="4sp"
                        android:layout_width="match_parent"
                        android:background="?android:attr/listDivider"
                        android:orientation="horizontal"
                        android:layout_marginLeft="4sp"
                        android:layout_marginEnd="4sp"
                        android:layout_marginRight="4sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ImageView
                android:id="@+id/getloaction_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_circle"
                android:layout_below="@+id/car_card_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:src="@drawable/ic_action_send_icon"/>
        </RelativeLayout>
</com.example.suriya.spotdrivers.support.MyViewPager>
