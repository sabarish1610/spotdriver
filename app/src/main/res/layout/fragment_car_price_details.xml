<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:padding="15sp"
    tools:context="com.example.suriya.spotdrivers.activity.driver.CreateDriverProfileAcitivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_of_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/local_trip_quation"
                android:text="Local Trip"
                android:theme="@style/check_box"
                android:textSize="18sp"
                android:background="@drawable/pins_bg_selector"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id = "@+id/local_trip_details"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Limited Km"
                    android:layout_marginLeft="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textSize="15sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="Km"
                    android:id="@+id/local_limited_km"
                    android:maxLength="7"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25sp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Rs"
                    android:id="@+id/local_total_cost"
                    android:maxLength="7"
                    android:inputType="number"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="25sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limite Time Period"
                android:layout_marginLeft="15sp"
                android:textColor="@android:color/white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipChildren="false">
                <com.crystal.crystalrangeseekbar.widgets.BubbleThumbSeekbar
                    android:id="@+id/rangeSeekbar3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:corner_radius="2"
                    app:bar_color="@android:color/white"
                    app:bar_highlight_color="#E07416"
                    app:left_thumb_image_pressed="@drawable/thumb_pressed"
                    app:data_type="_integer"/>
                <TextView
                    android:id="@+id/textMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@id/rangeSeekbar3"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/textMax3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:layout_below="@id/rangeSeekbar3"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exceed per KM price"
                    android:layout_marginLeft="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver Bata"
                    android:textSize="15sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/local_exceed_km_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25sp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="Rs"
                    android:inputType="number"
                    android:maxLength="7"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Rs"
                    android:id="@+id/local_driver_beta"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting Charges"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:hint="Rs"
                    android:id="@+id/local_waiting_charges"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/carNumber"
                android:layout_marginTop="5sp"
                android:background="@android:color/darker_gray"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/long_trip_quation"
                android:text="Long Trip"
                android:theme="@style/check_box"
                android:textSize="18sp"
                android:background="@drawable/pins_bg_selector"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id= "@+id/long_trip_details">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Per KM Price"
                    android:layout_marginLeft="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver Beta"
                    android:textSize="15sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:hint="Rs"
                    android:id="@+id/long_per_km_price"
                    android:maxLength="7"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25sp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Rs"
                    android:id="@+id/long_driver_beta"
                    android:inputType="number"
                    android:maxLength="7"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waiting Charges"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="25sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:hint="Rs"
                    android:id="@+id/long_waiting_charges"
                    android:maxLength="7"
                    android:inputType="number"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp">

                <CheckBox
                    android:id="@+id/is_halring_charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:text="Halting Charges" />
                <EditText
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rs"
                    android:id="@+id/long_halting_charges"
                    android:textSize="15sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:id="@+id/is_long_allowance"
                    android:text="Hills Allowance" />
                <EditText
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rs"
                    android:id="@+id/long_hills_allowance"
                    android:textSize="15sp"
                    android:layout_marginRight="25sp"
                    android:layout_weight="1"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/next_of_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_bg"/>
</RelativeLayout>
